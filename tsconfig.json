{
  "include": ["src", "types"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "outDir": "dist",
    "target": "ESNext",
    "module": "ESNext",
    "declaration": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "dom"],
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "declarationDir": "./dist",
    "noFallthroughCasesInSwitch": true
  }
}
